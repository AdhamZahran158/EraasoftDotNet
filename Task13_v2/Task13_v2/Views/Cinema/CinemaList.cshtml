@model IEnumerable<Cinema>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-12 mb-3">
            <div class="card shadow-sm w-100">
                <div class="card-body d-flex justify-content-between align-items-center">

                    <div class="position-relative h-sm-100">
                    <a class="d-block h-10" href="#"><img class="img-fluid object-fit-cover w-sm-20 h-sm-20 rounded-1 absolute-sm-centered" src="~/Images/CinemaImg/@item.Img" alt=""></a>
                    </div>

                    <!-- Cinema Name -->
                    <h5 class="card-title mb-0">
                        <a class="text-decoration-none text-dark" href="#">
                            @item.Name
                        </a>
                    </h5>

                    <!-- Action Buttons -->
                    <div class="d-flex flex-column align-items-end">
                        <a class="btn btn-sm btn-warning mb-2"
                           asp-controller="Cinema"
                           asp-action="EditCinema"
                           asp-route-id="@item.Id">
                            <i class="fas fa-edit"></i>
                            <span class="ms-1">Edit</span>
                        </a>

                        <a class="btn btn-sm btn-danger"
                           asp-controller="Cinema"
                           asp-action="DeleteCinema"
                           asp-route-id="@item.Id">
                            <i class="fas fa-trash-alt"></i>
                            <span class="ms-1">Delete</span>
                        </a>
                    </div>

                </div>
            </div>
        </div>
    }
</div>
