@{
    ViewData["Title"] = "Edit Todo";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Edit Todo</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>

<body class="bg-light py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="card shadow-lg rounded-4">
                    <div class="card-body p-4">
                        <h3 class="text-center mb-4">
                            <i class="bi bi-pencil-square text-primary"></i>
                            Edit Todo
                        </h3>

                        <form asp-action="EditTodo" asp-controller="Todos" method="post" enctype="multipart/form-data">
                            <!-- Title -->
                            <div class="mb-3">
                                <label for="Title" class="form-label fw-semibold">Title</label>
                                <input type="text" class="form-control" id="Title" name="Title" value="@ViewBag.TodoTitle" placeholder="Enter task title" required>
                            </div>

                            <!-- Description -->
                            <div class="mb-3">
                                <label for="Description" class="form-label fw-semibold">Description</label>
                                <textarea class="form-control" id="Description" name="Description" rows="4" value="@ViewBag.TodoDescription" placeholder="Describe your task..."></textarea>
                            </div>

                            <!-- Deadline -->
                            <div class="mb-3">
                                <label for="DeadLine" class="form-label fw-semibold">Deadline</label>
                                <input type="date" class="form-control" id="DeadLine" name="DeadLine" value="@ViewBag.TodoDeadLine">
                            </div>

                            <!-- File Upload -->
                            <div class="mb-4">
                                <label for="File" class="form-label fw-semibold">Attach File</label>
                                <input class="form-control" type="file" id="File" name="file" value="@ViewBag.TodoFile">
                            </div>

                            <!-- Submit Button -->
                            <div class="text-center">
                                <button type="submit" class="btn btn-primary px-4 py-2">
                                    <i class="bi bi-check-circle me-2"></i>
                                    Edit Todo
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

